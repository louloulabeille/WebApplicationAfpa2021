@model ModelAfpa.Etablissement

@{
    ViewData["Title"] = "Edit";
    List<ModelAfpa.Etablissement> listeEtablissement = null;
    listeEtablissement = ViewBag.IdEtablissementRattachement;
    listeEtablissement.Insert(0,new ModelAfpa.Etablissement());
    var listeItemEtablissement = listeEtablissement
        .Where(e=>e.IdEtablissement != ViewData.Model.IdEtablissement)
        .Select(e => new SelectListItem() { Text = e.DesignationEtablissement, Value = e.IdEtablissement });
}

<h1>Edit</h1>

<h4>Etablissement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEtablissement" />
            <div class="form-group">
                <label asp-for="DesignationEtablissement" class="control-label"></label>
                <input asp-for="DesignationEtablissement" class="form-control" />
                <span asp-validation-for="DesignationEtablissement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplementIdentificationEtablissement" class="control-label"></label>
                <input asp-for="ComplementIdentificationEtablissement" class="form-control" />
                <span asp-validation-for="ComplementIdentificationEtablissement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroNomVoieEtablissement" class="control-label"></label>
                <input asp-for="NumeroNomVoieEtablissement" class="form-control" />
                <span asp-validation-for="NumeroNomVoieEtablissement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplementAdresseEtablissement" class="control-label"></label>
                <input asp-for="ComplementAdresseEtablissement" class="form-control" />
                <span asp-validation-for="ComplementAdresseEtablissement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodePostalEtablissement" class="control-label"></label>
                <input asp-for="CodePostalEtablissement" class="form-control" />
                <span asp-validation-for="CodePostalEtablissement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VilleEtablissement" class="control-label"></label>
                <input asp-for="VilleEtablissement" class="form-control" />
                <span asp-validation-for="VilleEtablissement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEtablissementRattachement" class="control-label"></label>
                <select itemscope asp-for="IdEtablissementRattachement" class="form-control" asp-items="listeItemEtablissement"></select>
                <span asp-validation-for="IdEtablissementRattachement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
