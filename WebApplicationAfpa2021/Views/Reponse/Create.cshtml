@model ModelAfpa2020.Models.Reponse

@{
    ViewData["Title"] = "Create";
    List<ModelAfpa2020.Models.Question> questionsList = ViewBag.questionList;
    var listItemQuestion = questionsList.Select(e => new SelectListItem() { Text = e.Titre,Value = e.Id.ToString()});

}

<h1>Create</h1>

<h4>Reponse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <select asp-for="QuestionId" class ="form-control" asp-items="listItemQuestion"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
